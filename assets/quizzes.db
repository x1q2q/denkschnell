PRAGMA journal_mode = MEMORY;
PRAGMA synchronous = OFF;
PRAGMA foreign_keys = OFF;
PRAGMA ignore_check_constraints = OFF;
PRAGMA auto_vacuum = NONE;
PRAGMA secure_delete = OFF;
BEGIN TRANSACTION;

DROP TABLE IF EXISTS `about_apps`;

CREATE TABLE `about_apps` (
`app_name` text DEFAULT NULL,
`app_versions` INTEGER DEFAULT NULL,
`app_on_start` text DEFAULT NULL,
`app_descriptions` text DEFAULT NULL
);
LOCK TABLES `about_apps` WRITE;
INSERT INTO `about_apps` VALUES ('denkschnell',1,'Selamat datang di Denkschnell! Aplikasi ini dirancang untuk membantu Anda meningkatkan keterampilan berbicara dalam bahasa Jerman dengan cara yang interaktif dan menyenangkan.\r\nUntuk hasil terbaik, kami sarankan Anda memainkan Denkschnell secara tandem atau berpasangan. Belajar dengan mitra akan membuat latihan lebih efektif dan menyenangkan, serta memberikan kesempatan untuk mempraktikkan percakapan nyata.\r\nTerima kasih telah memilih Denkschnell. Selamat belajar dan semoga sukses!','Selamat datang di Denkschnell! Kami adalah tim yang berdedikasi dalam bidang bahasa, yang berfokus pada membantu Anda belajar bahasa Jerman dengan cara yang lebih mudah dan menyenangkan. Misi kami adalah membantu Anda meningkatkan keterampilan berbahasa Jerman, terutama dalam berbicara. Di Denkschnell, kami percaya bahwa berbicara adalah kunci utama dalam belajar bahasa. Oleh karena itu, kami telah mengembangkan aplikasi yang dirancang khusus untuk membantu Anda belajar bahasa Jerman melalui latihan interaktif dan berbasis praktik. Dengan Denkschnell, Anda dapat memperluas kosakata, memperbaiki tata bahasa, dan berlatih percakapan sehari-hari.\r\n\r\nAplikasi kami menawarkan berbagai fitur untuk memperkaya pengalaman belajar bahasa Anda: latihan interaktif yang didasarkan pada situasi kehidupan sehari-hari, membantu Anda berbicara bahasa Jerman dengan lebih percaya diri; pembelajaran berbasis permainan yang membuat proses belajar menjadi menyenangkan dan menantang; fitur untuk berlatih berbicara dengan teman, tandem, dan mentor, memungkinkan Anda mendapatkan umpan balik langsung dan belajar bersama; serta akses offline sehingga Anda dapat menggunakan aplikasi ini kapan saja dan di mana saja, bahkan tanpa koneksi internet. Kami berkomitmen untuk menyediakan alat belajar yang praktis dan mudah diakses oleh semua orang. Denkschnell dirancang untuk membantu pemula dan mereka yang ingin meningkatkan keterampilan berbahasa Jerman dengan cara yang efektif dan efisien. Terima kasih telah memilih Denkschnell sebagai mitra belajar bahasa Jerman Anda. Selamat belajar dan semoga sukses!');
UNLOCK TABLES;
DROP TABLE IF EXISTS `answers`;

CREATE TABLE `answers` (
`id` INTEGER NOT NULL ,
`question_id` INTEGER DEFAULT NULL,
`answer_text` text DEFAULT NULL,
`submitted_at` timestamp NOT NULL DEFAULT current_timestamp(),
PRIMARY KEY (`id`),
FOREIGN KEY (`question_id`) REFERENCES `questions` (`id`)
);
LOCK TABLES `answers` WRITE;
UNLOCK TABLES;
DROP TABLE IF EXISTS `multiple_choice_options`;

CREATE TABLE `multiple_choice_options` (
`id` INTEGER NOT NULL ,
`question_id` INTEGER DEFAULT NULL,
`option_text` TEXT NOT NULL,
`is_correct` tinyINTEGER NOT NULL,
PRIMARY KEY (`id`),
FOREIGN KEY (`question_id`) REFERENCES `questions` (`id`)
);
LOCK TABLES `multiple_choice_options` WRITE;
INSERT INTO `multiple_choice_options` VALUES (1,1,'<b>gehe</b>',0),(2,1,'gehen',1),(5,1,'geht',0);
UNLOCK TABLES;
DROP TABLE IF EXISTS `questions`;

CREATE TABLE `questions` (
`id` INTEGER NOT NULL ,
`quiz_id` INTEGER DEFAULT NULL,
`question_text` text NOT NULL,
`question_type` TEXT  NOT NULL,
`correct_answer` text DEFAULT NULL,
PRIMARY KEY (`id`),
FOREIGN KEY (`quiz_id`) REFERENCES `quiz` (`id`)
);
LOCK TABLES `questions` WRITE;
INSERT INTO `questions` VALUES (1,2,'Welches Verb passt hier? Ich ___ (gehen) gerne spazieren.','multiple_choice','gehen');
UNLOCK TABLES;
DROP TABLE IF EXISTS `quiz`;

CREATE TABLE `quiz` (
`id` INTEGER NOT NULL ,
`title` TEXT NOT NULL,
`descriptoin` text DEFAULT NULL,
PRIMARY KEY (`id`)
);
LOCK TABLES `quiz` WRITE;
INSERT INTO `quiz` VALUES (1,'landeskunde','Permainan ini bisa dimainkan sendiri atau bersama teman.-Berkreasilah dan jawab dengan percaya diri karena tidak ada batasan atau ketentuan yang mengikat.-Setelah menjawab, tekan tombol \"Lanjut\" untuk melanjutkan ke soal berikutnya. Jika ingin berhenti, tekan tombol \"Home\".'),(2,'grammatik','Permainan ini melibatkan dua orang: satu sebagai pemberi soal dan satu lagi sebagai penjawab soal.-Pemberi soal akan menyebutkan soal dan pilihan jawabannya.-Penjawab soal harus segera memilih jawaban yang dianggap benar dan cepat.-Jika jawabannya benar, pemberi soal menekan tombol \"Benar\".-Jika salah, tombol \"Salah\" ditekan, lalu hitunglah jumlah benarnya dan sampaikanlah kepada temanmu.-Terdapat 5 soal, pemain dapat memilih untuk melanjutkan dengan menekan tombol \"Lanjut\" atau berhenti dengan menekan tombol \"Home\".'),(3,'rollenspielen','Bermainlah dengan partnermu untuk menciptakan sebuah dialog yang menarik dan spontan sesuai dengan perintah yang diberikan.-Gunakan kreativitas dan imajinasi untuk membuat percakapan yang seru.-Kamu dapat menggunakan redemittel yang telah disediakan sebagai panduan, tetapi jangan ragu untuk berkreasi di luar redemittel tersebut agar dialog lebih dinamis.-Fitur Voice memudahkan pengguna sebagai bahan pelafalan.-Jika ingin melanjutkan bermain, tekan tombol \"Lanjut\". Jika ingin berhenti, tekan tombol \"Home\". ');
UNLOCK TABLES;



CREATE INDEX `answers_question_id` ON `answers` (`question_id`);
CREATE INDEX `multiple_choice_options_question_id` ON `multiple_choice_options` (`question_id`);
CREATE INDEX `questions_quiz_id` ON `questions` (`quiz_id`);

COMMIT;
PRAGMA ignore_check_constraints = ON;
PRAGMA foreign_keys = ON;
PRAGMA journal_mode = WAL;
PRAGMA synchronous = NORMAL;